<div class="container py-4">
  <div class="card shadow-sm mb-4 overflow-hidden">
    <div class="bg-light" style="height:180px; display:flex; align-items:center; justify-content:center;">
      <img src="https://images.pexels.com/photos/3183150/pexels-photo-3183150.jpeg" class="w-100 h-100 object-fit-cover" style="object-fit:cover; max-height:180px;" alt="Banner da Empresa">
    </div>
    <div class="card-body text-center position-relative">
      <div class="position-absolute top-0 start-50 translate-middle" style="margin-top:-55px;">
        <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center shadow border border-3 border-white" style="width:110px; height:110px;">
          <i class="bi bi-building text-white fs-1"></i>
        </div>
      </div>
      <div style="margin-top:60px;">
        <h2 class="mb-1 fw-bold">{{empresa.nome}}</h2>
        <p class="text-muted mb-1">CNPJ: {{empresa.cnpj}}</p>
        <p class="text-muted mb-3">{{empresa.localizacao}}</p>
        <div class="d-flex flex-wrap gap-2 justify-content-center mb-2">
          <a href="#" class="btn btn-primary">Abrir vagas</a>
          <a href="#" class="btn btn-primary">Aplicações</a>
          <a href="#" class="btn btn-primary">Buscar candidatos</a>
          <a href="/empresa/editar" class="btn btn-outline-primary">Editar perfil</a>
        </div>
      </div>
    </div>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <h4 class="mb-4 text-center">Sugestões para você</h4>
      <div class="row g-3 justify-content-center">
        <div class="col-12 col-sm-6 col-md-4">
          <div class="bg-light rounded-3 p-4 text-center h-100 shadow-sm">
            <i class="bi bi-building fs-2 text-primary mb-2"></i>
            <div>
              <button class="btn btn-outline-primary w-100 mt-2">Adicione um setor</button>
            </div>
          </div>
        </div>
        <div class="col-12 col-sm-6 col-md-4">
          <div class="bg-light rounded-3 p-4 text-center h-100 shadow-sm">
            <i class="bi bi-journal fs-2 text-primary mb-2"></i>
            <div>
              <button class="btn btn-outline-primary w-100 mt-2">Adicione um resumo</button>
            </div>
          </div>
        </div>
        <div class="col-12 col-sm-6 col-md-4">
          <div class="bg-light rounded-3 p-4 text-center h-100 shadow-sm">
            <i class="bi bi-file-plus fs-2 text-primary mb-2"></i>
            <div>
              <button class="btn btn-outline-primary w-100 mt-2">Adicione uma postagem</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>