<div class="container py-4">
  <div class="card shadow-sm mb-4">
    <div class="profile-banner">
      <img src="https://images.pexels.com/photos/3183150/pexels-photo-3183150.jpeg" class="profile-header-img" alt="Company Banner">
    </div>
    <div class="profile-content">
      <div class="rounded-circle bg-primary profile-avatar">
        <!-- adicionar foto do candidato -->
      </div>
      <div class="profile-info">
        <h2 class="mb-1">{{candidato.nome}}</h2>
        <p class="text-muted mb-1">Área de atuação: {{candidato.area_atuacao}}</p>
        <p class="text-muted mb-3">{{candidato.localizacao}}</p>
        <div class="d-flex flex-wrap gap-2">
          <a href="#" class="btn btn-primary">Situação</a>
          <a href="#" class="btn btn-primary">Recursos</a>
          <a href="#" class="btn btn-primary">Aprimorar perfil</a>
          <a href="/candidato/editar" class="btn btn-primary">Editar perfil</a>
        </div>
      </div>
    </div>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <h3 class="mb-4">Sugestões para você</h3>
      <div class="suggestions-container d-flex flex-wrap gap-4">
        <div class="suggestion-card">
          <i class="bi bi-building-gear"></i>
          <button class="btn btn-outline-primary suggestion-btn">Adicionar experiência</button>
        </div>
        <div class="suggestion-card">
          <i class="bi bi-lightbulb"></i>
          <button class="btn btn-outline-primary suggestion-btn">Adicionar habilidades</button>
        </div>
      </div>
    </div>
  </div>
</div>