<div class="dashboard-content">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="card-title mb-0">Meus Dados</h5>
                <button class="btn btn-outline-secondary" onclick="window.history.back()">
                    <i class="bi bi-arrow-left me-2"></i>Voltar
                </button>
            </div>

            <form action="/candidato/editar" method="post">
                <div class="row">
                    <div class="col-md-2 mb-3">
                        <label for="id" class="form-label">ID</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-hash"></i>
                            </span>
                            <input type="number" class="form-control bg-light" name="id" id="id" value="{{candidato.id}}"
                                readonly>
                        </div>
                    </div>

                    <div class="col-md-10 mb-3">
                        <label for="nome" class="form-label">Nome</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-person"></i>
                            </span>
                            <input type="text" class="form-control" name="nome" id="nome" value="{{usuario.nome}}"
                                required placeholder="Digite seu nome completo">
                        </div>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label for="email" class="form-label">Email</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-envelope"></i>
                            </span>
                            <input type="email" class="form-control bg-light" name="email" id="email"
                                value="{{usuario.email}}" readonly>
                        </div>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label for="area_atuacao" class="form-label">Área de atuação</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-card-text"></i>
                            </span>
                            <input type="text" class="form-control" name="area_atuacao" id="area_atuacao" value="{{candidato.area_atuacao}}" required >
                        </div>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label for="experiencia" class="form-label">Experiência</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-person-workspace"></i>
                            </span>
                            <input type="text" class="form-control" name="experiencia" id="experiencia" value="{{candidato.experiencia}}" required>
                        </div>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label for="habilidades" class="form-label">Habilidades</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-hammer"></i>
                            </span>
                            <input type="text" class="form-control" name="habilidades" id="habilidades" value="{{candidato.habilidades}}" required>
                        </div>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label for="localizacao" class="form-label">Localização</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-geo-alt-fill"></i>
                            </span>
                            <input type="text" class="form-control" name="localizacao" id="localizacao" value="{{candidato.localizacao}}" required>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-3">
                    <label for="tipo" class="form-label">Tipo</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-building"></i>
                        </span>
                        <input type="tipo" class="form-control bg-light" name="tipo" id="tipo"
                            value="{{usuario.tipo}}" readonly>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg me-2"></i>Salvar Alterações
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>